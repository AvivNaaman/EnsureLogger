<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminateOnly="false"
        android:layout_marginTop="-6dp"
        android:paddingTop="0dp"
        android:id="@+id/LoginActivityTopProgress"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="17sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/LoginWelcomeText"
            android:textSize="35sp"
            android:gravity="center_horizontal"
            android:paddingBottom="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/LoginUserNameHint"
                android:id="@+id/LoginUserNameEt"
                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LoginPasswordEt"
                android:hint="@string/LoginPwdHint"
                android:inputType="textPassword"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:paddingHorizontal="45sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/LoginBtnText"
            android:id="@+id/LoginBtnGo"/>
    </LinearLayout>
</LinearLayout>
