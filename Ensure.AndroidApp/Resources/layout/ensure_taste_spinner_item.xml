<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:id="@+id/TasteSpinnerItemTv"
		android:text="@string/ESITasteNamePlaceholder"
		android:textSize="20sp"
		android:layout_gravity="center_vertical"/>
	<ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
		android:layout_gravity="right"
		android:contentDescription="@string/ESITasteImgDescription"
		android:id="@+id/TasteSpinnerItemIv"
		android:background="@drawable/ensure_taste_vanilla"/>
</LinearLayout>
