<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ProgressBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		android:indeterminateOnly="false"
		android:layout_marginTop="-6dp"
		android:paddingTop="0dp"
		android:id="@+id/ProfileActivityTopProgress"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="27sp">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="27sp"
			android:text="@string/ProfileTitle"
			android:gravity="center"
			android:paddingBottom="23sp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:id="@+id/ProfileUserNameTv"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:id="@+id/ProfileEmailTv"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<EditText
				android:layout_width="0px"
				android:layout_height="wrap_content"
				android:layout_weight="2"
				android:hint="@string/ProfileTargetHint"
				android:inputType="numberDecimal"
				android:layout_marginHorizontal="12sp"
				android:id="@+id/ProfileTargetEt"/>
			<Button
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/ProfileSaveTargetBtn"
				android:id="@+id/ProfileSaveButton"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
