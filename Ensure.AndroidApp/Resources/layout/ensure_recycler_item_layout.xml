<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="7sp"
    >
    <ImageView
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:padding="2sp"
        android:id="@+id/EnsureReceyclerItemIv"
        android:contentDescription="Ensure bottle taste image"
        android:src="@drawable/ensure_taste_vanilla"
        android:layout_gravity="right"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taste Here"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="24sp"
        android:id="@+id/EnsureRvAdapterTaste"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Logged"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="16sp"
        android:id="@+id/EnsureRvAdapterDate"/>
</LinearLayout>
