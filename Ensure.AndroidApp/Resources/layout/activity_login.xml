<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<!-- Loading bar on top -->
	<ProgressBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		android:indeterminateOnly="false"
		android:layout_marginTop="-6dp"
		android:paddingTop="0dp"
		android:id="@+id/LoginActivityTopProgress"/>
	<!-- Main content -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="17sp">
		
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/LoginWelcomeTitle"
			android:textSize="35sp"
			android:gravity="center_horizontal"
			android:paddingBottom="15sp"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/LoginWelcomeText"
			android:textSize="15sp"
			android:gravity="center_horizontal"
			android:paddingBottom="17sp"/>

		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/LoginUserNameHint"
			android:id="@+id/LoginUserNameEt"
			android:inputType="text"/>
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/LoginPasswordEt"
			android:hint="@string/LoginPwdHint"
			android:inputType="textPassword"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:paddingHorizontal="45sp"
			android:text="@string/LoginBtnText"
			android:id="@+id/LoginBtnGo"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="Forgot Password?"
			android:id="@+id/LoginResetPwdBtn"/>
		
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:paddingHorizontal="41sp"
			android:text="@string/LoginRegisterBtnText"
			android:id="@+id/LoginRegisterBtn"/>
	</LinearLayout>
</LinearLayout>
