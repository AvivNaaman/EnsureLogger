<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/MainActivityRefreshableLayout">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<ProgressBar
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			android:indeterminateOnly="false"
			android:layout_marginTop="-6dp"
			android:paddingTop="0dp"
			tools:ignore="HardcodedSize,NegativeMargin"
			android:id="@+id/MainActivityTopProgress"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="15sp"
			android:text="@string/HelloUserDefaultText"
			android:layout_marginHorizontal="12sp"
			android:id="@+id/HelloUserTv"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="7dp"
			android:id="@+id/TodayProgressTv"
			android:gravity="center"
			android:text="@string/MainTitleTvText"
			android:textSize="27sp"/>

		<FrameLayout
			android:layout_width="200sp"
			android:layout_height="200sp"
			android:layout_gravity="center">
			<ProgressBar
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				style="@style/CircularDeterminateProgressBar"
				android:layout_gravity="center"
				android:id="@+id/TodayProgressBar"/>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:autoSizeMaxTextSize="100sp"
				android:autoSizeMinTextSize="12sp"
				android:autoSizeTextType="uniform"
				android:layout_margin="70sp"
				android:text="@string/ProgressInnerTvText"
				android:id="@+id/MainProgressTv" />
		</FrameLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@android:color/darker_gray"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/AddLogDescription"
				android:textSize="17sp"
				android:layout_marginHorizontal="17sp"/>
			<Spinner
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/EnsureTasteSpinner"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/AddLogBtnText"
				android:layout_marginHorizontal="17dp"
				android:layout_marginVertical="0dp"
				android:id="@+id/addBtn"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<LinearLayout
				android:layout_width="0px"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="match_parent"
					android:layout_margin="17sp"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:src="@drawable/person_outline"
					android:id="@+id/ProfileImageBtn"
					android:scaleType="fitCenter"
					android:contentDescription="@string/ProfileImgBtnText"
					android:background="@drawable/basic_border"
				/>
			</LinearLayout>
			<!-- TODO: Add borders & user description -->
			<LinearLayout
				android:layout_width="0px"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<ImageButton
					android:layout_width="match_parent"
					android:layout_margin="17sp"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:scaleType="fitCenter"
					android:src="@drawable/time_outline"
					android:id="@+id/HistoryImageBtn"
					android:contentDescription="@sting/HistoryImgBtnText"
					android:background="@drawable/basic_border"
				/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>